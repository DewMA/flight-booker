
<turbo-frame id="results">
    <h2>Select a Flight</h2>
    <%= form_with(url: bookings_path, local: true, data: { controller: "form", action: "input->form#next" }) do |f| %>
        <%= f.hidden_field :passengers, :value => @passengers %>
        <% @results.each do |r| %>
            <div class="user">
                <%= r.from.name %> - <%= r.to.name %> : <%= date_in_words(r.departure_time) %> <%= f.radio_button :flight, r.id %></br>
            </div>
        <% end %>
        <%= f.submit "Book Selected Flight", class: "form-btn", style: "visibility: hidden;", data: {form_target: "submitBtn"}%>
    <% end %>
</turbo-frame>