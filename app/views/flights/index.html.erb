
<turbo-frame id="results">
    <h2>Select a Flight</h2>
    <%= form_with(url: flights_path, local: true) do |f| %>
        <%= f.hidden_field :passengers, :value => @passengers %>
        <% @results.each do |r| %>
            <div class="user">
                <%= r.from.name %> - <%= r.to.name %> <%= f.radio_button :flight, r.id %></br>
            </div>
        <% end %>
        <%= f.submit "Book Selected Flight", class: "form-btn"%>
    <% end %>
</turbo-frame>